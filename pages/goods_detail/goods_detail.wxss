/* pages/goods_detail/goods_detail.wxss */
page {
  padding-bottom: 90rpx;
}

/*轮播图*/
.detail_swiper {
  height: 100vw;
  border-bottom: 5rpx solid #f2f5f8;
}

.swiper_item image {
  width: 100%;
}

/*商品名称*/
.goods_message {
  padding: 15rpx 0;
  border-bottom: 15rpx solid #f2f5f8;
}

.goods_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}

.goods_name_row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods_name_row .goods_name {
  flex: 5;
  font-size: 30rpx;
  color: #000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 5rpx solid #f2f2f2;
}

.goods_name_row .icon-shoucang1 {
  color: orange;
}

/*图文详情*/
.goods_info .goods_info_title {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: red;
  border-bottom: 15rpx solid #f2f5f8;
}

/*底部工具栏*/
.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}

.btm_tool .tool_item {
  flex: 1;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btm_tool .btn_cart {
  flex: 1.5;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 300;
}

.btm_tool .btn_buy {
  flex: 1.5;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 300;
}


