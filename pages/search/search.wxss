page {
  background-color: #dedede;
  padding: 20rpx;
}

.search_row {
  height: 60rpx;
  display: flex;
}

.search_row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  margin-right: 10rpx;
}

.search_row button {
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*搜索到的内容样式*/
.search_content {
  padding-top: 20rpx;
}

.search_content .search_item {
  background-color: #fff;
  font-size: 28rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}