<view class="search_row">
    <input value="{{inpValue}}" placeholder="请输入您要搜索的商品" bindinput="searchInput"></input>
    <button bind:tap="clearClick" hidden="{{!isFocus}}" style="width: 80rpx">取消</button>
</view>
<view class="search_content">
    <navigator url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}" class="search_item"
               wx:for="{{goods}}"
               wx:key="goods_id">
        {{item.goods_name}}
    </navigator>
</view>