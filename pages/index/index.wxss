/*通过设定swiper的宽高，图片设置100%，只要宽高比相同，那么图片会充满我们的swiper*/
.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}

.index_swiper swiper image {
  width: 100%;
}

.index_cate {
  display: flex;
}

.index_cate navigator {
  flex: 1;
  padding: 20rpx;
}

.index_cate navigator image {
  width: 100%;
}

.floor-title {
  padding: 10rpx 0;
}

.floor-title image {
  width: 100%;
}

.floor-body {
  /*overflow: hidden;*/
}

.floor-body navigator {
  float: left;
  width: 33.33%;
}

.floor-body navigator:nth-last-child(-n+4) {
  height: calc(33.33vw * 386 / 232 / 2);
  border-left: 10rpx solid #fff;
}

.floor-body navigator:nth-child(2),
.floor-body navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}

.floor-body navigator image {
  width: 100%;
  height: 100%;
}
